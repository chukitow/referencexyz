<% layout('application') -%>

<div class="fondo-header row altura-completa">
	<div class="col-xs-12 col-md-3 altura-completa sin-padding fondo-gris">
		<div class="centrar-texto">
			<div class="fondo-blanco padding-largo borde-abajo">
				<a href="/">
					<img src="/imgs/logo_small.png" width="100">
					<h1 class="color-negro sin-margen sin-padding tamano-letra-20">ReferenceXYZ</h1>	
				</a>
				
			</div>
			<div class="margen-menu-abajo">
				
			</div>
		</div>
	</div>

	<div class="col-xs-12 col-md-6 altura-completa scroll-y sombreado relative" style="z-index:3;">
		<div class="inline margen-centro">
			<div id="borde-negro" class="text-center">
			<p id="html"><%=language.title%></p>
		</div>

		<div class="table-responsive  text-center">
			<table class="table table-striped table-condensed" id="tabla-valores">
			<thead>
			<tr>
				<th class="etiquetas-azules">Título</th>
				<th class="etiquetas-azules">Descripción</th>
				<th class="etiquetas-azules">Visitas</th>
			</tr>
			</thead>
			<% for(var i=0; i<propiedades.length; i++){ 
			  %>
			  <%var propiedad = propiedades[i]%>
				<tr>
					<td><%=propiedades._id%></td>
					<td><%=propiedades.title%></td>
					<td><%=propiedades.description%></td>
					<td><button type="button">Editar</button>-<button type="button">Eliminar</button></td>
				</tr>
				
				<%
				} 
			%>
			</table>
		</div>

		</div>
	</div>

	<div class="col-xs-12 col-md-3 sin-padding altura-completa fondo-gris" style="padding-top:-1px !important;">
		<div class="fondo-blanco" style="min-height:80px;">
			<div id="contenedorB" class="contenedor-buscador padding-largo">
				<form action="/search" id="buscador">
					<label for="keyword">Buscar:</label>
					<input id="input-b" id="keyword" style="width: 100%" name="keyword" type="text" value="" placeholder="Buscar etiqueta" class="lupita" required>
				</form>
			</div>
		</div>
		<div>
			<div id="resultados">
			</div>
			
		</div>
		
	</div>
</div>
