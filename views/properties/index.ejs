<% layout('admin') -%>

<div class="table-responsive">
		<h1>Panel de administracion</h1>
		<p>Productos actuales</p>
		<td><form action="/propiedades/new"><button type="submit" class="btn btn-link">Nueva Propiedad</button></form></td>
		<table class="table table-hover">
		<thead>	
			<tr>
				<th>#</th>
				<th>Nombre</th>
				<th>Descripcion</th>
				<th>URL</th>
				<th>Lenguaje</th>
				<th>Acciones</th>
			</tr>
		</thead>
			<% for(var i=0; i<propiedades.length; i++){ 
			  %>
			  <%var propiedad = propiedades[i]%>
				<tr>
					<td><%=propiedad._id%></td>
					<td><%=propiedad.title%></td>
					<td><%=propiedad.description%></td>
					<td><%=propiedad.slug %></td>
					<td><%=propiedad.language%></td>
					<td>
						<form method="get" action="/propiedades/<%=propiedad._id%>"><button onclick="form.action" type="submit" class="color-azul-rgb sin-borde sin-fondo">Mostrar</button>
						<a href="/propiedades_edit/<%= propiedad._id %>">Editar</a>
						</form>
						<form method="post" action="/propiedades/<%=propiedad._id%>?_method=delete" ><button onclick="return confirm('Â¿Desea Eliminar el elemento?:\n' +  form.action)" type="submit" class="color-azul-rgb sin-borde sin-fondo " >Eliminar</button> </form>
					</td>
					
				</tr>
				
				<%
				} 
			%>
	</table>
</div>